// Enhanced parallax effect for floating elements + clear orchids on scroll
window.addEventListener('scroll', () => {
    const scrolled = window.pageYOffset;
    const parallax = document.querySelectorAll('.floating-arch');
    
    parallax.forEach((element, index) => {
        const speed = 0.3 + (index * 0.1);
        const rotation = scrolled * (0.05 + index * 0.02);
        element.style.transform = `translateY(${scrolled * speed}px) rotate(${rotation}deg)`;
    });
    
    // Clear all orchids when user scrolls (so they don't block the view)
    const orchids = document.querySelectorAll('.orchid-sticker');
    orchids.forEach(orchid => {
        if (orchid.parentNode) {
            orchid.classList.remove('fade-in');
            orchid.classList.add('fade-out');
            setTimeout(() => {
                if (orchid.parentNode) {
                    orchid.parentNode.removeChild(orchid);
                }
            }, 300);
        }
    });
});
