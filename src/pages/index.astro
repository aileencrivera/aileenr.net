    const randomOrchid = orchidImages[Math.floor(Math.random() * orchidImages.length)];
    orchid.innerHTML = `<img src="${randomOrchid}" alt="orchid" class="orchid-img">`;
    
    // Random offset from click position
    const offsetX = (Math.random() - 0.5) * 50;
    const offsetY = (Math.random() - 0.5) * 50;
    
    // Use the exact click coordinates
    orchid.style.position = 'fixed';
    orchid.style.left = (x + offsetX) + 'px';
    orchid.style.top = (y + offsetY) + 'px';
    orchid.style.pointerEvents = 'none';
    orchid.style.transform = `rotate(${(Math.random() - 0.5) * 30}deg)`;
    
    document.body.appendChild(orchid);
    
    console.log(`Orchid created at: ${x + offsetX}, ${y + offsetY}`);
    
    const lifetime = 5000 + Math.random() * 4000;
    
    setTimeout(() => {
        orchid.classList.remove('fade-in');
        orchid.classList.add('fade-out');
        
        setTimeout(() => {
            if (orchid.parentNode) {
                orchid.parentNode.removeChild(orchid);
            }
        }, 1000);
    }, lifetime);
}

